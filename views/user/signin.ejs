<%include ../templates/header%>

<div class="container">
    <br>
    <br>
    <br>
    <div class="row">
        <div class="col-md-12">
            <% if(message.length > 0 ){%>
                <div class="alert alert-success" role="alert"> <%= message%></div>
             <% } %>
            <div class="well well-sm">
                <form  action="/user/signin" class="form-horizontal" method="POST">
                    <fieldset>
                        <legend class="text-center header"> <IMG SRC="..\public\img\SIADCON.png" WIDTH=220 HEIGHT=160>Iniciar Sesión</legend>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-8">
                                <input required id="correo" name="username" type="text" placeholder="Correo" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-key"></i></span>
                            <div class="col-md-8">
                                <input id="password" name="password" type="password" placeholder="Password" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-success btn-lg" value="ENVIAR">Iniciar Sesión</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
 <% if(autenticacion.length > 0 ){%>
     <div class="alert alert-danger" role="alert"> <%= autenticacion%></div>
 <% } %>
<br><br>
<% include ../templates/footer%>